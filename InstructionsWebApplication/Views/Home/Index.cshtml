@model InstructionsWebApplication.Models.HomeViewModels.IndexViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "ShowAllInstruction";
}

<form method="post">
    <div class="jumbotron form-group">
        <h1 class="text-center">@Localizer["HomePage"]</h1>
        <p>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
                <input asp-for="@Model.Text"  class="form-group form-control" id="textSearchInput" placeholder="@Localizer["SearchText"]">
                <span class="input-group-btn">
                    <input class="btn btn-success" type="submit" value="@Localizer["Search"]"/>
                </span>
            </div>
        </p>
    </div>
</form>
