                    <img src="@item.ImageURL" alt="...">
                    <div class="caption">
                        <div class="well well-lg">
                            <p class="lead tex">
                                @item.Description
                               
                            </p>
                        </div>
                        <p>
                            @Html.ActionLink(@Localizer["Open"].Value, "ShowInstruction", "Instruction", new { InstructionId = item.InstructionId }, new { @class = "btn btn-success btn-block", role = "button" })
                        </p>

                        <p>
                            <span class="label label-default">@item.Category</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

    }





