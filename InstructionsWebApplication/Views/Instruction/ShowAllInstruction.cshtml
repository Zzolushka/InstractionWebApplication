@model IEnumerable<InstructionsWebApplication.Models.Instruction>

@{
    ViewData["Title"] = "ShowAllInstruction";
}
   
<div>
@Html.ActionLink("Add", "Create", "Instruction",new { } ,new { @class = "btn btn-success" })
</div>   
    @foreach (var item in Model)
    {   <div class="row">
            <div class="col-sm-6 col-md-8">
                <div class="thumbnail">
                    <img src="@item.ImageURL" alt="...">
                    <div class="caption">
                        <h3></h3>
                        <blockquote>
                        <p>@item.Description</p>
                        </blockquote>
                        <p>@Html.ActionLink("Edit", "Edit", "Instruction", new { InstructionId = item.InstructionId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", "Instruction", new { InstructionId = item.InstructionId }, new { @class = "btn btn-danger" ,role = "button"})
                        @Html.ActionLink("Open", "Show", "Instruction", new { InstructionId = item.InstructionId }, new { @class = "btn btn-success pull-right", role = "button" })</p>
                    </div>
                </div>
            </div>
        </div>
    }

