@using Microsoft.AspNetCore.Identity
@using InstructionsWebApplication.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @*<a href="home/showuserinformation?@UserManager.GetUserId(User)" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
                @Html.ActionLink(Localizer["MyPage"].Value, "showuserinformation", "home", new { UserId = UserManager.GetUserId(User) })
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">@Localizer["LogOut"].Value</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">@Localizer["Register"].Value</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">@Localizer["Login"].Value</a></li>
    </ul>
}
